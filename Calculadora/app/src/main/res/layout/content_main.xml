<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rodrigodonha.com.calculadora.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:id="@+id/linhaZero"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btZero"
            android:layout_width="186dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btVirgula"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/btIgual"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/colorPressedHighlight"
            android:text="="
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaUm"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btUm"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btDois"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btTres"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btSomar"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/colorPressedHighlight"
            android:text="+"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaDois"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btQuatro"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btCinco"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btSeis"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btSubtrair"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/colorPressedHighlight"
            android:text="-"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaTres"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="210dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btSete"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btOito"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btNove"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btMultiplicar"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/colorPressedHighlight"
            android:text="x"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaQuatro"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="280dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btLimpar"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="#d9d9d7"
            android:text="a/c"
            android:textSize="24sp" />

        <Button
            android:id="@+id/TrocaSinal"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="#d9d9d7"
            android:text="-/+"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btPorcentagem"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="#d9d9d7"
            android:text="%"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btDividir"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/colorPressedHighlight"
            android:text="/"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaCinco"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="350dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btMemLimpar"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="#d9d9d7"
            android:text="mc"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btMemSomar"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="#d9d9d7"
            android:text="m+"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btMemSubtrair"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="#d9d9d7"
            android:text="m-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btMemResultado"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/colorPressedHighlight"
            android:text="mr"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaSeis"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="420dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvVisor"
            android:layout_width="374dp"
            android:layout_height="65dp"
            android:layout_marginLeft="14dp"
            android:textColor="@android:color/background_light"
            android:textSize="48sp"
            android:autoSizeTextType="uniform"
            android:textAlignment="viewEnd"
            android:gravity="end" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaSete"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="490dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvHistorico"
            android:layout_width="374dp"
            android:layout_height="65dp"
            android:layout_marginLeft="14dp"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linhaOito"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="560dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvMensagem"
            android:layout_width="374dp"
            android:layout_height="65dp"
            android:layout_marginLeft="14dp"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            />

    </LinearLayout>


</RelativeLayout>
